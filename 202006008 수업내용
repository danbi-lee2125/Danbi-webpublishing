<!-- tr : 행
     th : 타이틀, 제목 굵은 글씨로 나온다
     행을 추가하고싶으면 tr 추가
     td : 내용을 쓰는거같다 -->
    <table>
       <tr>
           <th colspan="2">아이티부서</th> 
       </tr>
       <!-- 요거는 가로 통합 -->
        <tr>
            <th rowspan="6">컨텐츠팀</th>
            <td>유보미</td>
        </tr>
        <!-- 요거는 세로 통합 -->
        <tr>
            <td>이단비</td>
        </tr>
        <tr>
            <td>조수경</td>
        </tr>
